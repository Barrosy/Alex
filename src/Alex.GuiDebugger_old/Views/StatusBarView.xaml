<catel:UserControl
	x:Class="Alex.GuiDebugger.Views.StatusBarView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:catel="http://schemas.catelproject.com"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:orc="http://schemas.wildgums.com/orc/controls"
	d:DesignHeight="20"
	d:DesignWidth="600"
	mc:Ignorable="d">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
			<Label Content="Updating search index..." Visibility="{Binding IsUpdatingSearch, Converter={catel:BooleanToCollapsingVisibilityConverter}}" />
			<Label Content="Searching..." Visibility="{Binding IsSearching, Converter={catel:BooleanToCollapsingVisibilityConverter}}" />
		</StackPanel>
		<StackPanel
			x:Name="stackPanel"
			Grid.Column="2"
			HorizontalAlignment="Right"
			Orientation="Horizontal">

			<TextBlock Text="{Binding ProductName}" />

			<Separator Width="{Binding ElementName=stackPanel, Path=ActualHeight}" Margin="3,0,3,0">
				<Separator.LayoutTransform>
					<RotateTransform Angle="90" />
				</Separator.LayoutTransform>
			</Separator>

			<TextBlock Text="{Binding Version}" />
		</StackPanel>
	</Grid>
</catel:UserControl>
