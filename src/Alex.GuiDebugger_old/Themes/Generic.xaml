	<DataTemplate x:Key="VerticalAlignmentPropertyEditorTemplate" DataType="{x:Type rui:VerticalAlignment}">
		<ComboBox
			Margin="0"
			ItemsSource="{Binding Source={StaticResource VerticalAlignmentEnumValues}}"
			SelectedItem="{Binding .}" />
